<style>
    input[type=submit] {
        background-color: #286090;
        border:thick;
        color: white;
        padding: 5px 10px;
        text-decoration: none;
        margin: 2px 2px;
        cursor: pointer;
    }
</style>



@model YenySim.Models.City

@{
    ViewBag.Title = "Game";
}

<h2>Game</h2>
<h3 style="background:border-box center; border-color:cadetblue; padding:3px">@ViewBag.Message</h3>



<div>
    <h4>City</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Villagers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Villagers)
        </dd>
        <dd>
            Each villager provides 1 action and consumes 1 food and 1 water per day
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Wood)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wood)
            <form action="~/Home/Harvest">
                 <input type="hidden" name="resource" value="wood" />
                 <input type="submit" value="Harvest Wood" text-color="black" />
                             
            </form>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Food)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Food)
            <form action="~/Home/Harvest">
               <input type="hidden" name="resource" value="food"/>
               <input type="submit" value="Harvest Food"/>
            </form>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Water)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Water)
           
            <form action="~/Home/Harvest">
                <input type="hidden" name="resource" value="water" />
                <input type="submit" value="Harvest Water" />

            </form>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Wells)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wells)
            <form action="~/Home/Build">
                <input type="hidden" name="resource" value="wells" />
                <input type="submit" value="Build Well" />
            </form>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Houses)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Houses)
            <form action="~/Home/Build">
                <input type="hidden" name="resource" value="houses" />
                <input type="submit" value="Build House" />
            </form>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Day)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Day)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Actions)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Actions)
        </dd>
        <dd>
            You get 1 action per day per villager.
        </dd>


    </dl>
</div>

<div class="row">
    <div class="col-sm-1">Day:</div>
    <div class="col-sm-10">
       
        @if (Model.Actions == 0 && Model.Villagers > 0)
         {
            <form action="~/Home/EndOFDay" method="post">
                <input type="submit" value="End of Day" />
            </form>
         }
    </div>
</div>



